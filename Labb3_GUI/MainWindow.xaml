<Window x:Class="Labb3_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Margin="20,30,20,0" Padding="0" Content="{Binding Path=Name}"/>
            <TextBlock Margin="10" Height="300" Background="LightGray"/>

        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label Margin="20,30,20,0" Padding="0" Content="Question:"/>
            <TextBox Margin="20,0,20,20" Height="100"/>

            <Label Margin="20,10,20,0" Padding="0" Content="Correct answer:"/>
            <TextBox Margin="20,0,20,0"/>
            <Label Margin="20,10,20,0" Padding="0" Content="First incorrect answer:"/>
            <TextBox Margin="20,0,20,0"/>
            <Label Margin="20,10,20,0" Padding="0" Content="Second incorrect answer:"/>
            <TextBox Margin="20,0,20,0"/>
            <Label Margin="20,10,20,0" Padding="0" Content="Third incorrect answer:"/>
            <TextBox Margin="20,0,20,0"/>

        </StackPanel>

    </Grid>
</Window>
