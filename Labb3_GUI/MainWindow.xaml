<Window x:Class="Labb3_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_GUI"
        xmlns:views="clr-namespace:Labb3_GUI.Visuals"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600"
        MinHeight="500"
        MinWidth="600"
        Background="{StaticResource BackgroundBrush}">
   
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Control" Command="{Binding OpenCreatePackCommand}" />
        <KeyBinding Key="O" Modifiers="Control" Command="{Binding OpenPackCommand}" />
        <KeyBinding Key="Q" Modifiers="Control" Command="{Binding ExitCommand}" />
    </Window.InputBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:MenuView Grid.Row="0"/>
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}" />
        <!--<views:PlayerView Grid.Row="1"/>-->
        <!--<views:ConfigurationView Grid.Row="1"/>-->

    </Grid>
</Window>
