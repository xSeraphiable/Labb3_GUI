<Window x:Class="Labb3_GUI.Dialogs.CreateNewPackDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_GUI.Dialogs"
        mc:Ignorable="d"
        Title="New Question Pack" Height="280" Width="220"
        Background="LightGray"
        DataContext="{Binding MainWindowViewModel}"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">

            <Label Content="Pack name:" Margin="10,0,0,0" Padding="0" />
            <TextBox 
                x:Name="packNameBox" 
                Margin="10 0 10 0" 
                BorderBrush="Gray" Text="{Binding CreatePackName, UpdateSourceTrigger=PropertyChanged}"/>

        </StackPanel>

        <StackPanel Grid.Row="2">

            <Label Content="Difficulty:" Margin="10,0,0,0" Padding="0" />
            <ComboBox Margin="10 0 10 0"
                      ToolTip="Choose difficulty"
                      ItemsSource="{Binding Difficulties}" 
                      SelectedItem="{Binding SelectedDifficulty, UpdateSourceTrigger=PropertyChanged}"
                      />

        </StackPanel>

        <StackPanel Grid.Row="3">

            <Label Content="Choose time limit:" Margin="10,0,0,0" Padding="0" />
            <Slider x:Name="TimeLimitSlider"
                    Minimum="10" 
                    Maximum="60" 
                    TickFrequency="5"
                    IsSnapToTickEnabled="True"
                    Margin="10,0,10,0" 
                    TickPlacement="BottomRight"
                    Value="{Binding CreateTimeLimit, UpdateSourceTrigger=PropertyChanged}"
                    AutoToolTipPlacement="TopLeft"
                    AutoToolTipPrecision="0"
                     />
            <!--<TextBlock Margin="10 0 0 0" Text="{Binding ElementName=TimeLimitSlider, Path=Value}"/>-->

        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">

            <Button 
                x:Name="ConfirmButton" 
                Content="Confirm" 
                Height="25"
                Margin="8" 
                Padding="2" 
                Command="{Binding CreateNewPackCommand}"/>
            <Button 
                x:Name="CancelButton" 
                Height="25"
                Content="Cancel" 
                Margin="8" 
                Padding="2" 
                Click="CancelButton_Click"/>

        </StackPanel>

    </Grid>
</Window>
