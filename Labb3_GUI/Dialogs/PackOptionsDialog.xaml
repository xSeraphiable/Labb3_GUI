<Window x:Class="Labb3_GUI.Dialogs.PackOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_GUI.Dialogs"
        mc:Ignorable="d"
        Title="Pack Options" Height="200" Width="200"
        Background="DarkGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">

            <Label Content="Pack name:" Margin="10,0,0,0" Padding="0" />
            <TextBox x:Name="packName" Width="180" BorderBrush="Gray" Background="LightGray"/>

        </StackPanel>

        <StackPanel Grid.Row="2" >

            <Label Content="Difficulty:" Margin="10,0,0,0" Padding="0" />
            <ComboBox x:Name="difficulty" Width="180" BorderBrush="Gray" Background="LightGray" ToolTip="Choose difficulty">
               <!--Här ska min enum finnas-->
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="3"  >

            <Label Content="Time limit:" Margin="10,0,0,0" Padding="0" />
            <Slider Foreground="LightGray" Minimum="10" Maximum="120" TickFrequency="5" Margin="10,0,10,0" TickPlacement="BottomRight"/>

        </StackPanel>

    </Grid>
</Window>
