<Window x:Class="Labb3_GUI.Dialogs.PackOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_GUI.Dialogs"
        mc:Ignorable="d"
        Title="Pack Options" Height="200" Width="200"
        Background="{StaticResource BackgroundBrush}"
        DataContext="{Binding MainWindowViewModel}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">

            <Label Content="Pack name:" Margin="10,0,0,0" Padding="0" />
            <TextBox x:Name="packName" 
                     Margin="10 0 10 0"                       
                     Text="{Binding ActivePack.Name, UpdateSourceTrigger=PropertyChanged}"/>

        </StackPanel>

        <StackPanel Grid.Row="1" >

            <Label Content="Difficulty:" Margin="10,0,0,0" Padding="0" />
            <ComboBox Margin="10 0 10 0"
                      ToolTip="Choose difficulty"
                      ItemsSource="{Binding Difficulties}"
                      SelectedItem="{Binding SelectedDifficulty, UpdateSourceTrigger=PropertyChanged}" />

        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="Time limit:" Margin="10,0,0,0" Padding="0" />
            <TextBlock Text="{Binding ActivePack.TimeLimitInSeconds}" 
               Margin="5,0,0,0"
               FontWeight="Bold"/>
        </StackPanel>

        <Slider Grid.Row="3" x:Name="TimeLimitSlider"
        Minimum="10"
        Maximum="60"
        TickFrequency="5"
        IsSnapToTickEnabled="True"
        Margin="10,0,10,0"
        TickPlacement="BottomRight"
        Value="{Binding ActivePack.TimeLimitInSeconds, UpdateSourceTrigger=PropertyChanged}"
        AutoToolTipPlacement="TopLeft"
        AutoToolTipPrecision="0" />

    </Grid>
</Window>
