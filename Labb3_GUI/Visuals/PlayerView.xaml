<UserControl x:Class="Labb3_GUI.Visuals.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_GUI.Visuals"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            
        <Label Content="Quiz time!" FontSize="28" Margin="10" HorizontalAlignment="Center"/>
        <TextBlock Text="Fråga x / x" FontSize="14"
                       Margin="5" HorizontalAlignment="Center"/>
            
        </StackPanel>
        
        <TextBlock Grid.Row="1" Margin="20" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Text="{Binding CurrentQuestion.Query}"/>
        <TextBlock Grid.Row="1" Margin="20" FontSize="30" FontWeight="ExtraBold" 
                   HorizontalAlignment="Right" 
                   Text="{Binding TimeLeft}"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"
                    Margin="25"
                    Height="75"
                    Width="100"
                    FontSize="18"
                    Content="{Binding CurrentQuestion.ShuffledAnswers[0]}"
                    Command="{Binding AnswerCommand}"
                    CommandParameter="{Binding CurrentQuestion.ShuffledAnswers[0]}"
                    />
            <Button HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"
                    Margin="25"
                    Height="75"
                    Width="100"
                    FontSize="18"
                    Content="{Binding CurrentQuestion.ShuffledAnswers[1]}"
                    Command="{Binding AnswerCommand}"
                    CommandParameter="{Binding CurrentQuestion.ShuffledAnswers[1]}"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button HorizontalAlignment="Center" 
            VerticalAlignment="Top"
            Margin="25"
            Height="75"
            Width="100"
                    FontSize="18"
            Content="{Binding CurrentQuestion.ShuffledAnswers[2]}"
            Command="{Binding AnswerCommand}"
            CommandParameter="{Binding CurrentQuestion.ShuffledAnswers[2]}"/>
            <Button HorizontalAlignment="Center" 
            VerticalAlignment="Top"
            Margin="25"
            Height="75"
            Width="100"
                    FontSize="18"
            Content="{Binding CurrentQuestion.ShuffledAnswers[3]}"
            Command="{Binding AnswerCommand}"
            CommandParameter="{Binding CurrentQuestion.ShuffledAnswers[3]}"/>
        </StackPanel>
        
    </Grid>
</UserControl>
