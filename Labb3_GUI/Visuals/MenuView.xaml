<UserControl x:Class="Labb3_GUI.Visuals.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_GUI.Visuals"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             >
    <Menu>
   
        <MenuItem Header="_File">
            <MenuItem x:Name="newQuestionPack" Header="_New Question Pack" 
                      Icon="{fa:Icon folderplus}"
                      Command="{Binding CreateNewPackCommand}"
                                            />
            <MenuItem x:Name="selectPack" 
                      Header="_Select Question Pack"
                      Icon="{fa:Icon folder}"
                      ItemsSource="{Binding Packs}">
                <MenuItem.ItemTemplate>
                    <DataTemplate>
                        <MenuItem Header="{Binding Name}"
                      Command="{Binding DataContext.SelectPackCommand,
                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                      CommandParameter="{Binding}" />
                    </DataTemplate>
                </MenuItem.ItemTemplate>
            </MenuItem>
            
            <Separator/>
            
            <MenuItem Header="E_xit" Icon="{fa:Icon xmark}" Click="MenuItem_Click"/>
        </MenuItem>

        <MenuItem Header="_Edit">
            <MenuItem Header="A_dd Question" 
                      Icon="{fa:Icon plus}"
                      Command="{Binding ConfigurationViewModel.NewQuestionCommand}"
                      />
            <MenuItem Header="_Delete Question" 
                      InputGestureText="Ctrl+R" 
                      Icon="{fa:Icon minus}"
                      Command="{Binding ConfigurationViewModel.DeleteQuestionCommand}"/>
            <MenuItem Header="Set Pack Name" 
                      Command="{Binding PlayerViewModel.SetPackNameCommand}"/>
            <MenuItem x:Name="EditPack" 
                      Header="E_dit Question Pack" 
                      Click="EditPack_Click" 
                      Icon="{fa:Icon pentosquare}"/>
        </MenuItem>

        <MenuItem Header="_View">
            <MenuItem Header="Play" Icon="{fa:Icon play}"/>
        </MenuItem>

    </Menu>
</UserControl>
