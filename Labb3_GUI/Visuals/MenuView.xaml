<UserControl x:Class="Labb3_GUI.Visuals.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_GUI.Visuals"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             
             >
    <Menu KeyboardNavigation.TabNavigation="Local"
      KeyboardNavigation.DirectionalNavigation="Cycle">


        <MenuItem Header="_File">
            <MenuItem x:Name="newQuestionPack" Header="_New Question Pack" 
                      InputGestureText="Ctrl + N" 
                      Icon="{fa:Icon folderplus}"
                      Command="{Binding OpenCreatePackCommand}"
                                            />
            <MenuItem x:Name="selectPack" 
                      Header="_Select Question Pack"
                      Icon="{fa:Icon folder}"
                      ItemsSource="{Binding Packs}">
                <MenuItem.ItemTemplate>
                    <DataTemplate>
                        <MenuItem Header="{Binding Name}"
                                  Command="{Binding DataContext.SelectPackCommand,
                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  CommandParameter="{Binding}" />
                    </DataTemplate>
                </MenuItem.ItemTemplate>
            </MenuItem>     

            <MenuItem Header="_Delete Question Pack" 
           Icon="{fa:Icon folderminus}"
           Command="{Binding DeletePackCommand}"
                                 />

            <Separator Style="{StaticResource MenuSeparatorStyle}"/>

            <MenuItem Header="E_xit" 
                      Icon="{fa:Icon xmark}"
                      InputGestureText="Alt + F4" 
                      Command="{Binding ExitCommand}"/>
        </MenuItem>

        <MenuItem Header="_Edit">
            <MenuItem Header="_Add Question" 
                      InputGestureText="Ctrl + '+'" 
                      Icon="{fa:Icon plus}"
                      Command="{Binding ConfigurationViewModel.NewQuestionCommand}"
                      />
            <MenuItem Header="_Delete Question" 
                      InputGestureText="Ctrl + '-'" 
                      Icon="{fa:Icon minus}"
                      Command="{Binding ConfigurationViewModel.DeleteQuestionCommand}"/>
            <MenuItem x:Name="EditPack" 
                      Header="_Edit Question Pack"
                      InputGestureText="Ctrl + O" 
                      Command="{Binding EditPackCommand}"
                      Icon="{fa:Icon pentosquare}"/>
        </MenuItem>

        <MenuItem Header="_View">
            <MenuItem Header="_Play" 
                      Icon="{fa:Icon play}" 
                      InputGestureText="Ctrl + P" 
                      Command="{Binding ShowPlayerViewCommand}"/>
            <MenuItem Header="_Edit" 
                      Icon="{fa:Icon play}" 
                      InputGestureText="Ctrl + E" 
                      Command="{Binding ShowConfigViewCommand}"/>
            <MenuItem Header="_Fullscreen"              
             InputGestureText="Alt + enter" 
             Command="{Binding ToggleFullscreenCommand}"/>
        </MenuItem>

    </Menu>
</UserControl>
